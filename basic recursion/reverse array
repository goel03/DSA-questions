#include <iostream>
using namespace std;
void reverse(int arr[],int start,int end)
{
     if (start < end) {
      swap(arr[start], arr[end]);
      reverse(arr, start + 1, end - 1);
   }
   
}

int main() {
    int n =4;
    // cin>>n;
    int arr[]={1,2,3,4};
    
    for(int i=0;i<n;i++)
    {
    cout<<arr[i];
    }
    reverse(arr,0,n-1);
   for(int i=0;i<n;i++)
    {
    cout<<arr[i];
    }

    return 0;
}
